server {
	listen 80 default_server;
	listen [::]:80 default_server;
	server_name _;

	location /static/ {
	    root {{ dojo_path }}/django-DefectDojo;
	}

	location /media/ {
	    root {{ dojo_path }}/django-DefectDojo;
	}

	location /local/ {
	    root {{ dojo_path }}/django-DefectDojo;
	}

	location / {
		proxy_pass http://127.0.0.1:{{ proxy_pass_port }};
	}


}
